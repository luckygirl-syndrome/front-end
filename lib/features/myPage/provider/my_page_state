import 'package:flutter_riverpod/flutter_riverpod.dart';

// lib/features/my/provider/my_page_state.dart
class MyPageState {
  final String nickname;
  final String title; // 예: 랭킹 맹신 쇼퍼
  final Map<String, double> sbtiScores; // D: 0.7, S: 0.8 등
  final int boughtCount;
  final int gaveUpCount;

  MyPageState({
    this.nickname = '홍경현',
    this.title = '랭킹 맹신 쇼퍼',
    this.sbtiScores = const {'D': 0.7, 'S': 0.8, 'T': 0.6},
    this.boughtCount = 18,
    this.gaveUpCount = 7,
  });
}

// lib/features/my/provider/my_page_notifier.dart
class MyPageNotifier extends StateNotifier<MyPageState> {
  MyPageNotifier() : super(MyPageState());

  // 프로필 설정 이동 등 필요한 로직 추가
}

final myPageProvider = StateNotifierProvider<MyPageNotifier, MyPageState>((ref) {
  return MyPageNotifier();
});